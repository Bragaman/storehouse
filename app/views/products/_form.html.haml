= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :agreement_number
    = f.number_field :agreement_number
  .field
    = f.label :temperature_min
    = f.text_field :temperature_min
  .field
    = f.label :temperature_max
    = f.text_field :temperature_max
  .field
    = f.label :humidity_min
    = f.text_field :humidity_min
  .field
    = f.label :humidity_max
    = f.text_field :humidity_max
  .field
    = f.label :receipt_date
    = f.datetime_select :receipt_date
  .field
    = f.label :expiration_date
    = f.datetime_select :expiration_date
  .field
    = f.label :client_id
    = f.select :client_id, Client.all.map{ |e| [e.entity_name, e.id]}
  .field
    = f.label :stack_id
    / = f.text_field :stack
    = f.select :stack_id, (Stack.all.map { |e| [e.number, e.id] })
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
